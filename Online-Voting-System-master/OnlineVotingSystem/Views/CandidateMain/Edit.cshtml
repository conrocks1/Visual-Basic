@model OnlineVotingSystem.Models.Candidate

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CandidateLayout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Candidate</legend>

        @Html.HiddenFor(model => model.CandidateId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Society)
        </div>
        <div class="editor-field">
       <select id="Society" name="Society">
  <option>Technical</option>
  <option>Cultural</option>
  <option>FilmAndMusic</option>
  <option>Sports</option>
  </select>
            @Html.ValidationMessageFor(model => model.Society)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Manifesto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Manifesto)
            @Html.ValidationMessageFor(model => model.Manifesto)
        </div>

       

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Profile", "Profile", new { ID = Model.CandidateId })
</div>

